@{
    ViewData["Title"] = "New Expense";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Create Blog</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/Home/SaveExpense">
                        <label>Title: </label>
                        <input class="form-control" required name="Title" />
                        <br />

                        <label>Money Spent: </label>
                        <input type="number" class="form-control" required name="MoneySpent" min="0" value="0" step="5" />
                        <br />
                        
                        <label>Spent Date: </label>
                        <input type="date" class="form-control" required name="SpentDate" />
                        <br />

                        <label>Category: </label>
                        <select class="form-control" required name="Category">
                            <option>Utilities</option>
                            <option>Education</option>
                            <option>Grocery</option>
                            <option>Software Subscriptions</option>
                            <option>Meals</option>
                        </select>
                        <br />
                        <button class="btn btn-outline-primary float-end" type="submit">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>